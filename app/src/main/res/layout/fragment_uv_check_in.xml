<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.visits.view.UvCheckInFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_alignParentTop="true"
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp">

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_preview"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_border"
                android:padding="2dp"
                android:layout_gravity="center" />

            <View
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/circle_dot_green" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:fontFamily="@font/robotoslab_regular"
                android:textSize="@dimen/_10ssp"
                android:letterSpacing="0"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="@font/robotoslab_regular"
                android:textSize="@dimen/_9ssp"
                android:textColor="#555555" />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.tabs.TabLayout
        android:layout_below="@+id/topLayout"
        android:layout_centerInParent="true"
        android:id="@+id/tabLayout"
        android:layout_width="@dimen/_153sdp"
        android:layout_height="@dimen/_33sdp"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/ic_tab_background"
        android:minHeight="48dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabPaddingBottom="-1dp"
        app:tabPaddingTop="-1dp"
        android:clipToPadding="true"
        app:tabRippleColor="@null" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_map"
        android:layout_below="@+id/tabLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/_10sdp"
            android:layout_below="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_266sdp">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/btnCheckIn"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/robotoslab_regular"
            app:icon="@drawable/ic_sharp_timer"
            app:iconTintMode="multiply"
            android:text="@string/check_in"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textSize="@dimen/_12ssp"
             />

        <com.google.android.material.button.MaterialButton
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/btnCheckOut"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/robotoslab_regular"
            app:icon="@drawable/ic_sharp_timer"
            app:iconTintMode="multiply"
            android:text="@string/check_out"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textSize="@dimen/_12ssp"
             />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:visibility="gone"
        android:layout_below="@+id/tabLayout"
        android:id="@+id/layout_qr"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_266sdp">

            <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/qrView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>