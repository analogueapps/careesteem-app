<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.aits.careesteem.view.auth.viewmodel.WelcomeViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:background="@color/screenBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/screenBackground"
            android:orientation="vertical"
            tools:context=".view.auth.view.WelcomeFragment">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgTopLogo"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_marginTop="?attr/actionBarSize"
                android:src="@drawable/app_logo" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arvo_regular"
                    android:lineHeight="@dimen/_36sdp"
                    android:text="@string/welcome"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_20ssp"
                    tools:targetApi="p" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="@string/please_sign_in_to_continue"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_12ssp"
                    tools:targetApi="p" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/group_mobile_prefix" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/lora_regular"
                        android:text="@string/enter_mobile_number"
                        android:textFontWeight="400"
                        android:textSize="@dimen/_12ssp"
                        tools:targetApi="p" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llMobileEntry"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/ic_edittext_bg"
                    android:gravity="center"
                    android:weightSum="1"
                    app:layout_constraintTop_toBottomOf="@+id/tvEntryBody">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCountryCode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:drawablePadding="10dip"
                            android:fontFamily="@font/lora_regular"
                            android:gravity="center"
                            android:textSize="@dimen/_14ssp"
                            tools:ignore="HardcodedText" />
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@null"/>
                        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:smsp_baseColor="@color/colorPrimary"
                            app:smsp_enableSearchHeader="false"
                            app:smsp_isSearchable="true"
                            app:smsp_multilineError="false"
                            app:smsp_selectedItemListColor="@color/colorPrimary" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.hbb20.CountryCodePicker
                        android:visibility="gone"
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ccp_defaultNameCode="GB"
                        app:ccp_showFlag="false"
                        app:ccp_showNameCode="false"
                        app:ccp_showFullName="false"
                        app:ccp_showArrow="true"
                        app:ccp_textSize="@dimen/_14ssp"
                        app:ccp_defaultPhoneCode="44" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent" />

                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="0.2"
                        android:autofillHints="phone"
                        android:background="@null"
                        android:fontFamily="@font/lora_regular"
                        android:hint="@string/enter_your_mobile_number"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingEnd="@dimen/_5sdp"
                        android:onTextChanged="@{(s, start, before, count) -> viewModel.setPhoneNumber(s, start, before, count)}"
                        android:text="@{viewModel.phoneNumber}"
                        android:textColorHint="@android:color/background_light"
                        android:textSize="@dimen/_14ssp"
                        tools:ignore="LabelFor,RtlSymmetry" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="@{viewModel.phoneNumberError}"
                    android:textFontWeight="400"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_10ssp"
                    tools:targetApi="p" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/arvo_regular"
                    android:text="@string/request_otp"
                    android:textAllCaps="false"
                    android:onClick="@{() -> viewModel.onButtonClicked()}"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_12ssp"
                    tools:targetApi="p" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:src="@drawable/layer_welcome_bottom" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>
</layout>