<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.alerts.view.AddAlertsFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:drawablePadding="8dip"
            android:drawableStart="@drawable/ic_alert"
            android:drawableTint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/arvo_bold"
            android:textFontWeight="700"
            android:textSize="@dimen/_14ssp"
            android:text="@string/raise_an_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:targetApi="p" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/arvo_regular"
            android:text="Clients"
            android:textFontWeight="400"
            android:textSize="@dimen/_12ssp"
            tools:targetApi="p"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/clientName"
            android:drawableEnd="@drawable/ic_keyboard_arrow_down_small"
            android:drawableTint="@color/black"
            android:background="@drawable/ic_edittext_light_bg"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_5sdp"
            android:hint="Select"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/lora_regular"
            android:textFontWeight="400"
            android:textSize="@dimen/_11ssp"
            tools:targetApi="p"
            tools:ignore="HardcodedText" />

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/allClientNameSpinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:smsp_baseColor="@color/colorPrimary"
            app:smsp_enableSearchHeader="false"
            app:smsp_isSearchable="true"
            app:smsp_multilineError="false"
            app:smsp_selectedItemListColor="@color/colorPrimary" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>