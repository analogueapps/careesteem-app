<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:orientation="vertical"
    tools:ignore="UselessParent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingLeft="@dimen/_14sdp"
            android:paddingRight="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoslab_regular"
                    android:text="To-Do's"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11ssp"
                    android:letterSpacing="0"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/closeButton"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:tint="#4C5664"
                    android:src="@drawable/ic_close_icon"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab_regular"
                android:text="To-Do Name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/todoName"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab_regular"
                android:textStyle="normal"
                android:textSize="@dimen/_9ssp"
                 />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/addNoteMain"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoslab_regular"
                    android:text="Additional Notes"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="HardcodedText" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/additionalNotes"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoslab_regular"
                    android:textStyle="normal"
                    android:textSize="@dimen/_9ssp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab_regular"
                android:text="Notes"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"

                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/carerNotes"
                android:background="@drawable/ic_todo_dialog_edittext_bg"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/robotoslab_regular"
                android:hint="Enter todo notes"
                android:textStyle="normal"
                android:gravity="left|top"
                android:lines="10"
                android:textSize="@dimen/_9ssp"

                tools:ignore="HardcodedText,RtlHardcoded" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_not_completed"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/ic_cancel_btn_bg"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="Not Completed"
                    android:textColor="@color/red"
                    android:fontFamily="@font/robotoslab_regular"
                    android:textStyle="bold"
                    android:textSize="@dimen/_9ssp"

                    tools:ignore="HardcodedText" />

                <Space
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_completed"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/ic_save_btn_bg"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="Completed"
                    android:textColor="@color/white"
                    android:fontFamily="@font/robotoslab_regular"
                    android:textStyle="bold"
                    android:textSize="@dimen/_9ssp"
                    tools:ignore="HardcodedText" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>