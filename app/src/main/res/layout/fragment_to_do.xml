<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.visits.view.ToDoFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/headerView"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:visibility="gone"
                        android:textStyle="normal"
                        android:fontFamily="@font/robotoslab_regular"
                        android:textSize="@dimen/_12ssp"
                        android:text="@string/list_of_todo_s"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         />

                    <SearchView
                        android:theme="@style/AppSearchView"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/ic_todo_search_bg"
                        android:id="@+id/searchView"
                        android:queryHint="Search"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:iconifiedByDefault="false"
                        android:queryBackground="@android:color/transparent"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textStyle="normal"
                            android:fontFamily="@font/robotoslab_regular"
                            android:textSize="@dimen/_12ssp"
                            android:text="@string/essentials"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             />
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/submitCount"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:textStyle="normal"
                                android:fontFamily="@font/robotoslab_regular"
                                android:textSize="@dimen/_12ssp"
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                tools:ignore="HardcodedText" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textStyle="normal"
                                android:fontFamily="@font/robotoslab_regular"
                                android:textSize="@dimen/_12ssp"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:text="/"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                tools:ignore="HardcodedText" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/totalCount"
                                android:textStyle="normal"
                                android:fontFamily="@font/robotoslab_regular"
                                android:textSize="@dimen/_12ssp"
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                tools:ignore="HardcodedText" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/recyclerView"
                    tools:listitem="@layout/item_todo_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:visibility="gone"
        android:id="@+id/emptyLayout"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/gifImageView"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/no_todo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="@string/no_todos"
            android:fontFamily="@font/robotoslab_regular"
            android:textStyle="normal"
            android:textSize="@dimen/_10ssp"
             />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>