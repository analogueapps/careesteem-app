<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_25sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_dialog_bg"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTopHeading"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/white"
                android:text="@string/visit_notes"
                android:textFontWeight="400"
                android:textSize="@dimen/_12ssp"
                tools:targetApi="p" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/closeButton"
                android:layout_marginStart="@dimen/_5sdp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_close"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:background="@drawable/ic_dialog_bottom_bg"
            android:layout_margin="1dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBelowHeading"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_edit_round_pencil"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/lora_regular"
                android:text="Visit Notes"
                android:textFontWeight="400"
                android:textSize="@dimen/_10ssp"
                tools:targetApi="p"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/visitNotes"
                android:background="@drawable/ic_todo_dialog_edittext_bg"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/lora_regular"
                android:hint="Enter visit notes"
                android:textFontWeight="400"
                android:gravity="left|top"
                android:lines="5"
                android:textSize="@dimen/_10ssp"
                tools:targetApi="p"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/btn_update"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_btn_green_bg"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Submit"
                android:textColor="#279989"
                android:fontFamily="@font/arvo_regular"
                android:textFontWeight="400"
                android:textSize="@dimen/_10ssp"
                tools:targetApi="p"
                tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</RelativeLayout>