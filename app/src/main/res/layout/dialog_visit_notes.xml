<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:ignore="UselessParent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:padding="@dimen/_10sdp"
            android:layout_margin="1dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTopHeading"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoslab_regular"
                    android:text="Visit Notes"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12ssp"
                    android:letterSpacing="0"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/closeButton"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_close"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="8dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBelowHeading"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/robotoslab_regular"
                android:text="Visit Notes"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/visitNotes"
                android:background="@drawable/ic_todo_dialog_edittext_bg"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/robotoslab_regular"
                android:hint="Enter visit notes"
                android:textStyle="normal"
                android:gravity="left|top"
                android:lines="10"
                android:textSize="@dimen/_10ssp"

                tools:ignore="HardcodedText,RtlHardcoded" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/btn_update"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_btn_green_bg"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Submit"
                android:textColor="#279989"
                android:fontFamily="@font/robotoslab_regular"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"

                tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>