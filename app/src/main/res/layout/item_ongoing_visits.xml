<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/ongoingCardBackground"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/ongoingCardCorner"
    app:cardCornerRadius="@dimen/_8sdp"
    app:strokeWidth="2.5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/_8sdp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvClientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab_regular"
                android:text="@string/app_name"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                 />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/tvClientAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoslab_regular"
                android:text="@string/app_name"
                android:singleLine="true"
                android:textStyle="normal"
                android:textSize="@dimen/_9ssp"
                 />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_margin="@dimen/_5sdp"
            android:background="@color/ongoingCardCorner"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlanTime"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ic_upcoming_inside"
            android:backgroundTint="@color/ongoingCardInsideCount"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_26sdp"
            android:fontFamily="@font/robotoslab_regular"
            android:text="@string/app_name"
            android:textStyle="normal"
            android:textSize="@dimen/_9ssp"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:singleLine="true"
             />

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center"
            android:id="@+id/btnCheckout"
            android:layout_gravity="center"
            app:backgroundTint="@null"
            android:background="@drawable/ic_checkin_background"
            android:backgroundTint="@color/ongoingCardCorner"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_26sdp"
            android:fontFamily="@font/robotoslab_regular"
            android:text="@string/check_out"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textSize="@dimen/_9ssp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>