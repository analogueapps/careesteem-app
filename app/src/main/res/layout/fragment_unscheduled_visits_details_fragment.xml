<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.unscheduled_visits.view.UnscheduledVisitsDetailsFragmentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/topCard"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/ongoingCardBackground"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/ongoingCardCorner"
            app:cardCornerRadius="@dimen/_8sdp"
            app:strokeWidth="2.5dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_8sdp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvClientName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lora_regular"
                        android:text="@string/app_name"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_13ssp"
                        tools:targetApi="p" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvClientAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lora_regular"
                        android:text="@string/app_name"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_9ssp"
                        tools:targetApi="p" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@color/ongoingCardCorner"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPlanTime"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/ic_upcoming_inside"
                    android:backgroundTint="@color/ongoingCardInsideCount"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:fontFamily="@font/lora_bold"
                    android:text="@string/app_name"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_11ssp"
                    android:singleLine="true"
                    tools:targetApi="p" />

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckout"
                    android:layout_gravity="center"
                    app:backgroundTint="@null"
                    android:background="@drawable/ic_checkin_background"
                    android:backgroundTint="@color/ongoingCardCorner"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:fontFamily="@font/arvo_regular"
                    android:text="@string/check_out"
                    android:textAllCaps="false"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_10ssp"
                    tools:targetApi="p" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.tabs.TabLayout
            app:layout_constraintTop_toBottomOf="@+id/topCard"
            android:id="@+id/tabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/TabLayoutStyle"
            app:tabBackground="@drawable/tab_background"
            android:backgroundTint="@android:color/transparent"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabRippleColor="@null" />

        <androidx.viewpager2.widget.ViewPager2
            android:paddingTop="@dimen/_5sdp"
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>