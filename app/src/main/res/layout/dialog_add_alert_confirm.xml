<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_25sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_dialog_bg"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:fontFamily="@font/robotoslab_regular"
            android:text="Sending Alert"
            android:textStyle="bold"
            android:textColor="#04443A"
            android:textSize="@dimen/_11ssp"
            tools:ignore="HardcodedText"
            />

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/sending_alerts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:fontFamily="@font/robotoslab_regular"
            android:text="Sending Alert"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:text="Are you sure you want to send this alert?"
            android:fontFamily="@font/robotoslab_regular"
            android:textStyle="normal"
            android:textSize="@dimen/_9ssp"
            tools:ignore="HardcodedText"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_negative"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_btn_red_bg"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="No"
                android:textColor="@color/red"
                android:fontFamily="@font/robotoslab_regular"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_positive"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_btn_green_bg"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Yes"
                android:textColor="#279989"
                android:fontFamily="@font/robotoslab_regular"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"

                tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</RelativeLayout>