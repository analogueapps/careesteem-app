<resources>

    <style name="Normal">
        <item name="cornerSize">0%</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="RoundedSquareExtra">
        <item name="cornerSize">20%</item>
    </style>

    <style name="CornerCut">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="DiamondCut">
        <item name="cornerSize">75dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="UpcomingVisitsButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/upcomingCardInsideButton</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/quantum_grey</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
        <item name="android:searchIcon">@drawable/ic_search</item>
        <item name="android:searchHintIcon">@drawable/ic_search</item>
    </style>

    <style name="TopCornerShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

</resources>