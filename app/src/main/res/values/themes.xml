<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CareEsteem" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>"
        <!-- This removes the default back/up icon -->
        <item name="windowActionBar">true</item>
        <item name="displayOptions">showTitle|useLogo</item>
        <item name="homeAsUpIndicator">@null</item> <!-- Removes back icon -->
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowReturnTransition">@android:transition/explode</item>
        <item name="materialButtonStyle">@style/SquareButtonStyle</item>
        <!-- Default Spinner Text Appearance -->
        <item name="android:spinnerItemStyle">@style/SpinnerTextAppearance</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropdownTextAppearance</item>
        <!-- Default AlertDialog Text Appearance -->
        <item name="android:alertDialogTheme">@style/CustomAlertDialogTheme</item>
        <item name="dialogTheme">@style/CustomDialogTheme</item>
    </style>

    <style name="Theme.CareEsteem" parent="Base.Theme.CareEsteem" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SquareButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:foreground">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="shapeAppearance">@style/SquareShapeAppearance</item>
    </style>

    <style name="SquareShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item> <!-- Active tab text color -->
        <item name="tabTextColor">@color/black</item> <!-- Inactive tab text color -->
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item> <!-- Default text color -->
        <item name="android:textAllCaps">false</item> <!-- Disable ALL CAPS -->
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/robotoslab_regular</item> <!-- Add custom font -->
    </style>

    <!-- Style for Spinner Item -->
    <style name="SpinnerTextAppearance" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="fontFamily">@font/robotoslab_regular</item>
    </style>

    <!-- Style for Spinner Dropdown -->
    <style name="SpinnerDropdownTextAppearance" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="fontFamily">@font/robotoslab_regular</item>
    </style>

    <style name="CustomSnackbar" parent="Base.Widget.MaterialComponents.Snackbar">
        <item name="android:textSize">16sp</item> <!-- Change Text Size -->
        <item name="android:fontFamily">@font/robotoslab_regular</item> <!-- Change Font -->
        <item name="fontFamily">@font/robotoslab_regular</item>
        <item name="android:maxLines">5</item> <!-- Allow Full Text Visibility -->
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.Material3.Light.Dialog.Alert">
        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <!-- Font for Title -->
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="fontFamily">@font/robotoslab_regular</item>
        <!-- Item Text Appearance -->
        <item name="android:itemTextAppearance">@style/CustomDialogItemText</item>
    </style>

    <!-- Define custom item text appearance -->
    <style name="CustomDialogItemText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="fontFamily">@font/robotoslab_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:backgroundDimAmount">0.8</item> <!-- This sets the dim to 0.8f -->
    </style>

    <style name="CustomMaterialSwitchStyle" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <!-- Thumb color when checked and unchecked -->
        <item name="thumbColor">@color/custom_thumb_color</item>
        <item name="thumbStrokeColor">@color/colorPrimary</item>
        <!-- Track color when checked and unchecked -->
        <item name="trackColor">@color/custom_track_color</item>

    </style>



</resources>